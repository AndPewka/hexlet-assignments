<h1>Task List</h1>

<%= link_to 'Create New Task', new_task_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task_path(task) %></td>
        <td><%= task.status %></td>
        <td><%= task.completed ? "Yes" : "No" %></td>
        <td>
          <%= link_to 'Edit', edit_task_path(task) %> |
          <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
